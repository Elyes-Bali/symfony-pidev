{% extends 'base.html.twig' %}

{% block title %}Destination index{% endblock %}

{% block body %}
    <h1>Destination index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Iddest</th>
                <th>Countries</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for destination in destinations %}
            <tr>
                <td>{{ destination.iddest }}</td>
                <td>{{ destination.countries }}</td>
                <td>
                    <a href="{{ path('app_destination_show', {'iddest': destination.iddest}) }}">show</a>
                    <a href="{{ path('app_destination_edit', {'iddest': destination.iddest}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_destination_new') }}">Create new</a>
{% endblock %}
