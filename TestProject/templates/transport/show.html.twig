{% extends 'base.html.twig' %}

{% block title %}Show Transport{% endblock %}

{% block body %}
    <h1>Show Transport</h1>

    <dl>
        <dt>ID</dt>
        <dd>{{ transport.id }}</dd>
        <dt>Type</dt>
        <dd>{{ transport.type }}</dd>
        <dt>Capacity</dt>
        <dd>{{ transport.cap }}</dd>
        <dt>Departure Date</dt>
        <dd>{{ transport.dd|date('Y-m-d') }}</dd>
        <dt>Arrival Date</dt>
        <dd>{{ transport.da|date('Y-m-d') }}</dd>
        <dt>Price</dt>
        <dd>{{ transport.prix }}</dd>
    </dl>

    <a href="{{ path('transports_index') }}">Back to list</a>
{% endblock %}
