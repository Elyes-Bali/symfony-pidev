{% extends 'base.html.twig' %}

{% block title %}Reservations index{% endblock %}

{% block body %}
    <h1>Reservations index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>PlacesReservees</th>
                <th>ParticipantId</th>
                <th>DateheureReservation</th>
                <th>Validate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.placesReservees }}</td>
                <td>{{ reservation.participantId }}</td>
                <td>{{ reservation.dateheureReservation ? reservation.dateheureReservation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservation.validate ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_reservations_show', {'id': reservation.id}) }}">show</a>
                    <a href="{{ path('app_reservations_edit', {'id': reservation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reservations_new') }}">Create new</a>
{% endblock %}
