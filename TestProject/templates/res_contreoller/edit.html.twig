{% extends 'base.html.twig' %}

{% block title %}Edit Reservations{% endblock %}

{% block head %}
    {{ parent() }}
    <style>
        /* Style for the container holding image containers and form */
        .container-wrapper {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }

        /* Style for the container holding image containers */
        .image-container-wrapper {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
        }

        /* Style for each image container */
        .image-container {
            text-align: center;
            margin-bottom: 20px;
            height: 250px; /* Set a fixed height for all image containers */
        }

        /* Style for the image */
        .image-container img {
            max-width: 100%;
            max-height: 100%;
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 5px;
        }

        /* Style for the form container */
        .form-container {
            flex: 1; /* Take remaining space */
            padding-right: 20px; /* Add some space between form and image containers */
        }
    </style>
{% endblock %}

{% block body %}
    <h1>Edit Reservations</h1>

    <!-- Container wrapper for image containers and form -->
    <div class="container-wrapper">

        <!-- Form container -->
        <div class="form-container">
            {{ include('res_contreoller/_form.html.twig', {'button_label': 'Update'}) }}
        </div>

        <!-- Image container wrapper -->
        <div class="image-container-wrapper">

            <!-- First Image container -->
            <div class="image-container">
                <img src="{{ asset('images/tn.jpg') }}" alt="Reservation Image 1">
            </div>

            <!-- Second Image container -->
            <div class="image-container">
                <img src="{{ asset('images/bl.jpg') }}" alt="Reservation Image 2">
            </div>

            <!-- Third Image container -->
            <div class="image-container">
                <img src="{{ asset('images/ll.jpg') }}" alt="Reservation Image 3">
            </div>

        </div>

    </div>

    <a href="{{ path('app_res_contreoller_index') }}">Back to list</a>

    {{ include('res_contreoller/_delete_form.html.twig') }}
{% endblock %}
