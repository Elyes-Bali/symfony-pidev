{% extends 'base.html.twig' %}
{% block title %}Reservations index{% endblock %}

{% block body %}
    <h1>Reservations index</h1>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Identifiant</th>
                <th scope="col">Places Réservées</th>
                <th scope="col">Id du Participant</th>
                <th scope="col">Date de Réservation</th>
                <th scope="col">Validation</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for reservation in reservations %}
                <tr>
                    <td>{{ reservation.id }}</td>
                    <td>{{ reservation.placesReservees }}</td>
                    <td>{{ reservation.participantId }}</td>
                    <td>{{ reservation.DateheureReservation ? reservation.DateheureReservation|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ reservation.validate ? 'Yes' : 'No' }}</td>
                    <td>
                        <a href="{{ path('app_res_contreoller_show', {'id': reservation.id}) }}" class="btn btn-info btn-sm" title="Show">
                            <i class="bi bi-eye"></i> Show
                        </a>
                        <a href="{{ path('app_res_contreoller_edit', {'id': reservation.id}) }}" class="btn btn-warning btn-sm" title="Edit">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a href="{{ path('app_res_contreoller_delete', {'id': reservation.id}) }}" class="btn btn-danger btn-sm" title="Delete" onclick="return confirm('Are you sure you want to delete this item?');">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_res_contreoller_new') }}" class="btn btn-primary">Create new</a>

{% endblock %}
