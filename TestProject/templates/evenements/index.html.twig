{% extends 'base.html.twig' %}

{% block title %}Evenements index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Evenements index</h1>

        <div class="row">
            {% set predefinedImages = ['beachparty.jpg', 'colorfestival.jpg', 'laternfestival.jpg', 'skydinner.jpg', 'YACHTparty.jpg'] %}
            
            {% for key, evenement in evenements %}
                <div class="col-md-4 mb-4">
                    <div class="card" style="height: 100%;">
                        {% if key < 5 %}
                            <img src="{{ asset('images/' ~ predefinedImages[key]) }}" class="card-img-top event-image" alt="Event Image">
                        {% else %}
                            <img src="{{ asset(evenement.image) }}" class="card-img-top event-image" alt="Event Image">
                        {% endif %}
                        
                        <div class="card-body">
                            <h5 class="card-title">{{ evenement.nom }}</h5>
                            <p class="card-text">
                                <strong>Date:</strong> {{ evenement.datedebut ? evenement.datedebut|date('Y-m-d') : 'N/A' }}<br>
                                <strong>Description:</strong> {{ evenement.description|default('N/A') }}<br>
                                <strong>Lieu:</strong> {{ evenement.lieu|default('N/A') }}<br>
                                <strong>Tarif:</strong> {{ evenement.tarif|default('N/A') }}<br>
                                <strong>Catégorie:</strong> {{ evenement.categorie.nom|default('Pas précisé') }}<br>
                                <strong>Places Disponibles:</strong> {{ evenement.placesDisponibles|default('N/A') }}<br>
                            </p>
                            <div class="btn-group" role="group" aria-label="Event Actions">
                                <a href="{{ path('app_evenements_show', {'id': evenement.id}) }}" class="btn btn-info">👁️ View</a>
                                <a href="{{ path('app_evenements_edit', {'id': evenement.id}) }}" class="btn btn-warning">📝 Edit</a>
                                <a href="{{ path('app_evenements_delete', {'id': evenement.id}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?')">🚫 Delete</a>
                                <a href="{{ path('generate_pdf', {'id': evenement.id}) }}" class="btn btn-secondary">📃 PDF</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-md-12">
                    <p>No records found</p>
                </div>
            {% endfor %}
        </div>

        <!-- Pagination -->
        <style>
            .pagination {
                display: flex;
                justify-content: center;
                margin-top: 20px;
            }

            .event-image {
                height: 200px; /* Set your desired height */
                object-fit: cover;
            }
        </style>
        <div class="pagination-container">
            {{ knp_pagination_render(evenements) }}
        </div>

        <a href="{{ path('app_evenements_new') }}" class="btn btn-success mt-4"> ➕ Ajouter</a>
    </div>
{% endblock %}