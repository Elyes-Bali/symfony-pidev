{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <div class="card">
            <div class="card-body">
                <img src="{{ asset('images/yes.jpg') }}" alt="Event Image" class="img-fluid float-right" style="max-width: 70px; max-height: 70px; margin-left: 10px; margin-bottom: 10px;">
                <h1 class="card-title">Cr√©er de nouveaux evenements</h1>

                {# Display flash messages #}
                {% for flashMessage in app.flashes('success') %}
                    <div class="alert alert-success" id="success-flash">
                        {{ flashMessage }}
                    </div>
                {% endfor %}

                {% for flashMessage in app.flashes('error') %}
                    <div class="alert alert-danger" id="error-flash">
                        {{ flashMessage }}
                    </div>
                {% endfor %}

                {{ include('evenements/_form.html.twig') }}
            </div>
        </div>
    </div>

    <script>
        // Automatically hide success flash after 10 seconds
        setTimeout(function() {
            document.getElementById('success-flash').style.display = 'none';
        }, 10000);

        // Automatically hide error flash after 10 seconds
        setTimeout(function() {
            document.getElementById('error-flash').style.display = 'none';
        }, 10000);
    </script>
{% endblock %}
