<div class="card-body card-block">
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}, {'attr': {'class': 'form-horizontal'}}, {'attr': {'enctype': 'multipart/form-data'}} )}}
    
    <div class="row form-group">
        <div class="col col-md-3">
            {{ form_label(form.datedebut, "Date de début:") }}
        </div>
        <div class="col-12 col-md-9">
            {{ form_widget(form.datedebut, {'attr': {'class': 'form-control'}}) }}
            {# {% if form_errors(form.datedebut) is not empty %}
                <small class="form-text text-muted">{{ form_errors(form.datedebut) }}</small>
            {% endif %} #}
        </div>
    </div>

    <div class="row form-group">
        <div class="col col-md-3">
            {{ form_label(form.nom, "Nom:") }}
        </div>
        <div class="col-12 col-md-9">
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {% if form_errors(form.nom) is not empty %}
                <small class="form-text text-muted">{{ form_errors(form.nom) }}</small>
            {% endif %}
        </div>
    </div>

    <div class="row form-group">
        <div class="col col-md-3">
            {{ form_label(form.description, "Description:") }}
        </div>
        <div class="col-12 col-md-9">
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            {% if form_errors(form.description) is not empty %}
                <small class="form-text text-muted">{{ form_errors(form.description) }}</small>
            {% endif %}
        </div>
    </div>
<div class="form-group row">
    <label for="categorie" class="col-12 col-md-3 col-form-label">Catégorie:</label>
    <div class="col-12 col-md-9">
        {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
        {% if form_errors(form.categorie) is not empty %}
            <small class="form-text text-muted">{{ form_errors(form.categorie) }}</small>
        {% endif %}
    </div>
</div>



    <div class="row form-group">
        <div class="col col-md-3">
            {{ form_label(form.lieu, "Lieu:") }}
        </div>
        <div class="col-12 col-md-9">
            {{ form_widget(form.lieu, {'attr': {'class': 'form-control'}}) }}
            {% if form_errors(form.lieu) is not empty %}
                <small class="form-text text-muted">{{ form_errors(form.lieu) }}</small>
            {% endif %}
        </div>
    </div>


   <div class="row form-group">
    <div class="col col-md-3">
        {{ form_label(form.image, "Image:") }}
    </div>
    <div class="col-12 col-md-9">
        {% if form.vars.value.image is not null %}
            <img src="{{ asset(form.vars.value.image) }}" class="img-thumbnail" alt="Current Image">
            {{ form_widget(form.image, {'attr': {'class': 'form-control mt-2'}}) }}
        {% else %}
            {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
        {% endif %}
        {% if form_errors(form.image) is not empty %}
            <small class="form-text text-muted">{{ form_errors(form.image) }}</small>
        {% endif %}
    </div>
</div>


    <div class="row form-group">
        <div class="col col-md-3">
            {{ form_label(form.placesDisponibles, "Places Disponibles:") }}
        </div>
        <div class="col-12 col-md-9">
            {{ form_widget(form.placesDisponibles, {'attr': {'class': 'form-control'}}) }}
            {% if form_errors(form.placesDisponibles) is not empty %}
                <small class="form-text text-muted">{{ form_errors(form.placesDisponibles) }}</small>
            {% endif %}
        </div>
    </div>

    <div class="row form-group">
        <div class="col col-md-3">
            {{ form_label(form.tarif, "Tarif:") }}
        </div>
        <div class="col-12 col-md-9">
            {{ form_widget(form.tarif, {'attr': {'class': 'form-control'}}) }}
            {% if form_errors(form.tarif) is not empty %}
                <small class="form-text text-muted">{{ form_errors(form.tarif) }}</small>
            {% endif %}
        </div>
    </div>

<button class="btn btn-primary" style="width:300px; margin:1px; background-color:#3498db; margin: 0 auto; display: block;">
    {{ button_label|default('Save') }}
</button>
    
    <br>
    
   <button class="btn btn-primary" style="width: 300px; margin: 1px; background-color: #3498db; margin: 0 auto; display: block;">
    <a href="{{ path('app_evenements_index') }}" style="color: white; text-decoration: none;">Back to List</a>
</button>


    {{ form_end(form) }}
</div>

 








