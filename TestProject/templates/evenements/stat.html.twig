{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title text-center"><strong>Evenements chart</strong></h5>
                    </div>
                    <div class="card-body">
                        <div id="chart_div" style="width: 100%; height: 400px;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        google.charts.load('current', {'packages':['corechart']});
        google.charts.setOnLoadCallback(drawChart);

        function drawChart() {
            var data = google.visualization.arrayToDataTable({{ data | json_encode | raw }});

            var options = {
                title: 'Pie chart',
                pieHole: 0.4,
                backgroundColor: '#f8f9fa', // Set background color
                legend: {
                    position: 'right', // Position legend to the right
                    textStyle: {
                        color: '#333' // Legend text color
                    }
                },
                colors: ['#78E0BA', '#78D2E0', '#789EE0', '#8678E0', '#BA78E0', '#E078D2'], // Set custom colors
                pieSliceTextStyle: {
                    color: 'black', // Set pie slice text color
                }
            };

            var chart = new google.visualization.PieChart(document.getElementById('chart_div'));
            chart.draw(data, options);
        }
    </script>
{% endblock %}
